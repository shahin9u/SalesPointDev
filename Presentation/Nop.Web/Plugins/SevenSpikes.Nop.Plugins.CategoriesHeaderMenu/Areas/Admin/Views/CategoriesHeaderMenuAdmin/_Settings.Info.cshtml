@model CategoriesHeaderMenuSettingsModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="Enabled_OverrideForStore" asp-input="Enabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="Enabled" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Enabled" />
                    <span asp-validation-for="Enabled"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="ShowHomePageTopLevelCategoriesOnly_OverrideForStore" asp-input="ShowHomePageTopLevelCategoriesOnly" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="ShowHomePageTopLevelCategoriesOnly" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ShowHomePageTopLevelCategoriesOnly" />
                    <span asp-validation-for="ShowHomePageTopLevelCategoriesOnly"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="ShowManufacturers_OverrideForStore" asp-input="ShowManufacturers" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="ShowManufacturers" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ShowManufacturers" />
                    <span asp-validation-for="ShowManufacturers"></span>
                </div>
            </div>
        </div>
    </div>
</div>